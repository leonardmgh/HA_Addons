{
  "name": "ProxyPXE",
  "version": "0.0.0.4",
  "slug": "proxypxe",
  "description": "A dnsmasq instance implementing a ProxyDHCP and tftp server",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "advanced": true,
  "startup": "system",
  "init": false,
  "host_network": true,
  "privileged": [
    "NET_ADMIN"
  ],
  "map": [ "config" ],
  "options": {
    "DHCPserver": "192.168.1.1",
    "TFTPpath": "/tftp",
    "MACROOT" : false,
    "dnsmasqoptions" : [
      "dhcp-no-override",
      "dhcp-vendorclass=BIOS,PXEClient:Arch:00000",
      "dhcp-vendorclass=UEFI32,PXEClient:Arch:00006",
      "dhcp-vendorclass=UEFI,PXEClient:Arch:00007",
      "dhcp-vendorclass=UEFI64,PXEClient:Arch:00009",
      "dhcp-boot=net:UEFI,bootx64.efi,,192.168.1.5",
      "dhcp-boot=net:UEFI64,bootx64.efi,,192.168.1.5" ]
  },
  "schema": {
    "DHCPserver": "str",
    "TFTPpath": "str",
    "MACROOT" : "bool",
    "dnsmasqoptions" : [ "str" ]
  }
}
